{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],

        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "netplayjs": ["src/index.ts"]
        },

        // <--- ADD THESE TWO LINES:
        "outDir": "./dist",    
        "rootDir": "./src",
        // <--- END ADDITION

        "allowJs": true,
        "skipLibCheck": true,

        "declaration": true,
        "declarationDir": "../../dist/dist/types/netplay",
        "emitDeclarationOnly": true,

        "strict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitAny": false,

        "composite": true
    },
    "include": ["src"],
    "exclude": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "node_modules",
        "dist" // <--- ALSO ADD THIS to exclude the output folder
    ]
}