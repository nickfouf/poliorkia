{
  "rules": {
    "matchmake": {
      ".read": true,
      ".write": true,
      // Optional: Validation to ensure structure
      ".validate": "newData.hasChildren(['host', 'timestamp'])"
    },
    "rooms": {
      "$roomId": {
        ".read": true,
        ".write": true,
        "signals": {
             "$uid": {
                 ".read": true,
                 ".write": true
             }
        }
      }
    },
    "rooms_public": {
      ".read": true,
      ".write": true
    },
    "meta": {
      "games_count": {
        ".read": true,
        ".write": true,
        // Ensure it only increments
        ".validate": "newData.isNumber() && (!data.exists() || newData.val() > data.val())"
      }
    }
  }
}

